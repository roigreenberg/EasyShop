<resources>

    <!-- Base application theme. -->
    <style userName="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item userName="colorPrimary">@color/colorPrimary</item>
        <item userName="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item userName="colorAccent">@color/colorAccent</item>
        <item userName="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item userName="windowActionModeOverlay">true</item>
    </style>

    <style userName="AppTheme.NoActionBar">
        <item userName="windowActionBar">false</item>
        <item userName="windowNoTitle">true</item>
    </style>

    <style userName="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style userName="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
